generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Creator {
  id                String        @id @default(cuid())
  youtubeChannelId  String        @unique
  name              String
  thumbnailUrl      String?
  category          String?
  country           String?
  currentSubs       Int           @default(0)
  currentViews      Int           @default(0)
  currentVideos     Int           @default(0)
  currentScore      Float         @default(0)
  currentPrice      Float         @default(100)
  isActive          Boolean       @default(true)
  visibility        Visibility    @default(PUBLIC)
  lastSyncedAt      DateTime      @updatedAt
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  circulatingSupply Float         @default(200000)
  initialPrice      Float         @default(100)
  liquidity         Float         @default(10000)
  reserveSupply     Float         @default(800000)
  totalSupply       Float         @default(1000000)
  nameKo            String?
  stats             CreatorStat[]
  positions         Position[]
  trades            Trade[]

  @@index([youtubeChannelId])
  @@index([category])
  @@index([visibility, isActive])
}

model CreatorStat {
  id               String   @id @default(cuid())
  creatorId        String
  date             DateTime
  period           Period   @default(DAILY)
  subs             Int
  views            Int
  videos           Int
  dailySubsChange  Int      @default(0)
  dailyViewsChange Int      @default(0)
  createdAt        DateTime @default(now())
  creator          Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([creatorId, date, period])
  @@index([creatorId, date])
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole   @default(USER)
  initialBudget Float      @default(100000)
  balance       Float      @default(100000)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  isBot         Boolean    @default(false)
  accounts      Account[]
  positions     Position[]
  sessions      Session[]
  trades        Trade[]
}

model Position {
  id        String   @id @default(cuid())
  userId    String
  creatorId String
  quantity  Float
  avgPrice  Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  creator   Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, creatorId])
  @@index([userId])
}

model Trade {
  id        String    @id @default(cuid())
  userId    String
  creatorId String
  type      TradeType
  quantity  Float
  price     Float
  createdAt DateTime  @default(now())
  creator   Creator   @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([creatorId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Visibility {
  PUBLIC
  HIDDEN
}

enum Period {
  HOURLY
  DAILY
}

enum UserRole {
  USER
  ADMIN
}

enum TradeType {
  BUY
  SELL
}
